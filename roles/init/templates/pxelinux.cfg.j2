default vesamenu.c32
prompt 1
timeout 60

display boot.msg

label RHCOS {{ ocp_release }}
  menu label ^Install OpenShift
  menu default
  kernel tftp://{{ srv_ip }}/kernel
  append ip=dhcp rd.neednet=1 initrd=tftp://{{ srv_ip }}/initramfs console=tty0 console=ttyS0 coreos.inst=yes coreos.inst.image_url=http://{{ srv_ip }}:8080/images/metal.raw.gz coreos.inst.ignition_url=http://{{ srv_ip }}:8080/ignition/worker.ign
label {{ rhel_version }}
  menu label Install system with RHEL
  kernel tftp://{{ srv_ip }}/{{ rhel_version }}/vmlinuz
  append initrd=tftp://{{ srv_ip }}/{{ rhel_version }}/initrd.img ip=dhcp inst.repo=http://{{ srv_ip }}:8080/{{ rhel_version }} inst.ks=http://{{ srv_ip }}:8080/kickstarts/ks.cfg